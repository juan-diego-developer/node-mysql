<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navdar navbar-dark bg-dark">
            <a href="#" class="navbar-brand mx-auto">NEWS</a>
        </nav> 
        <div class="container">
            <div class="row">
                <div class="col-md-6 mt-4 text-center">
                    <table class="table table-striped">
                        <tr>
                            <th>ID</th>
                            <th>TITLE</th>
                            <th>NEWS</th>
                        </tr>
                            <% for  (var i = 0; i < news.length; i++) %>
                        <tr>
                            <td><%= news[i].id_news%></td>
                            <td><%= news[i].title%></td>
                            <td><%= news[i].news%></td>
                        </tr>
                    
                    </table>
                </div>
                <div class="col-md-6 mt-4 card">
                    <from action="/news" method="post">
                        <h3 class="card-title">add News</h3>
                        <div class="form-group">
                            <input id="title" type="text" name="title" class="form-control" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <input type="text" name="news" class="form-control" placeholder="Content">
                        </div>
                        <input type="submit" class="btn btn-primary">
                    </from>
                </div>
            </div>
        </div>

        <script>
            document.getElementById('title').focus();
        </script>
        
    </body>
</html>